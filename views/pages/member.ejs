<div class="container">
    <h4 class="text" style="color: #6D9886;">
    Data Member
    </h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(member => { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text" style="color: #8EC3B0;">Nama Member</small> <br>
                        <%= member.nama_member %> 
                    </div>

                    <div class="col-lg-2">
                        <small class="text" style="color: #8EC3B0;">Alamat</small> <br>
                        <%= member.alamat %> 
                    </div>

                    <div class="col-lg-4">
                        <small class="text" style="color: #8EC3B0;">Telepon</small> <br>
                        <%= member.telepon %> 
                    </div>

                    <div class="col-lg-2">
                        <small class="text" style="color: #8EC3B0;">Action</small> <br />

                        <!-- button edit -->
                        <a href="/pelanggan/edit/<%= member.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/pelanggan/delete/<%= member.id %>"
                        onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                 </div>
            </div>
        </li>
        <% }) %>
    </ul>
    <!-- button add new data -->
    <a href="/pelanggan/add">
        <button class="btn btn-md" style="color: white; background-color: #6D9886;">
            Tambah Data
        </button>
    </a>
</div>