<div class="container">
    <h4 class="text" style="color: #6D9886;">
    Data Admin
    </h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(admin => { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text" style="color: #8EC3B0;">Nama</small> <br>
                        <%= admin.nama_admin %> 
                    </div>

                    <div class="col-lg-2">
                        <small class="text" style="color: #8EC3B0;">Username</small> <br>
                        <%= admin.username %> 
                    </div>

                    <div class="col-lg-4">
                        <small class="text" style="color: #8EC3B0;">Password</small> <br>
                        <%= admin.password %> 
                    </div>

                    <div class="col-lg-2">
                        <small class="text" style="color: #8EC3B0;">Action</small> <br />

                        <!-- button edit -->
                        <a href="/petugas/edit/<%= admin.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/petugas/delete/<%= admin.id %>"
                        onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                 </div>
            </div>
        </li>
        <% }) %>
    </ul>
    <!-- button add new data -->
    <a href="/petugas/add">
        <button class="btn btn-md" style="color: white; background-color: #6D9886;">
            Tambah Data
        </button>
    </a>
</div>